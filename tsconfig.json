{
    "compilerOptions": {
        "target": "es5",
        "strict": true,

        // This is needed for some reason to do with vue-test-utils.
        // The rest of this is just the default configuration.
        "allowSyntheticDefaultImports": true,

        "lib": ["dom", "es6"],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules"]
}
